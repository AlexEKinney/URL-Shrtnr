<%- include('../partials/head', { title: "Bulk URL Shortener" }) %>
<body class="flex items-center justify-center min-h-screen bg-gray-100 dark:bg-gray-900">
    <div class="w-full max-w-md bg-gray-200 p-6 rounded-lg shadow-lg dark:bg-gray-700">
        <h1 class="text-2xl font-bold text-center mb-4 dark:text-white">Bulk URL Shortener</h1>
        
        <% if (shortUrls && shortUrls.length > 0) { %>
            <div class="mt-4 p-2 bg-green-100 text-center rounded">
                <h2 class="text-lg font-bold dark:text-black">Shortened URLs</h2>
                <ul class="mt-2 text-left">
                    <% shortUrls.forEach(url => { %>
                        <li class="p-1 border-b border-gray-300">
                            <a href="<%= url %>" class="text-blue-600"><%= url %></a>
                        </li>
                    <% }); %>
                </ul>
            </div>
        <% } else { %>
            <p class="text-center text-gray-700 dark:text-white">No URLs processed. Please upload a valid CSV file.</p>
        <% } %>
        
        <div class="mt-6 p-4 bg-white dark:bg-gray-800 rounded shadow">
            <h2 class="text-lg font-bold dark:text-white text-center">Upload Another CSV</h2>
            <form action="/bulk-shorten" method="POST" enctype="multipart/form-data">
                <input type="file" name="csvFile" accept=".csv" required class="block w-full mt-2">
                <button type="submit" class="mt-2 bg-blue-500 text-white p-2 rounded w-full">Upload & Shorten</button>
            </form>
        </div>
        
        <div class="mt-4 text-center">
            <a href="/" class="text-blue-500 underline">Back to Home</a>
        </div>
    </div>
</body>
</html>
